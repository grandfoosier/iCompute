<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

	<!-- Other CSS -->
	<link rel="stylesheet" type="text/css" href="stylesheets/iComputeLogin.css">

	<title>iCompute</title>
</head>
<body>
	<!-- Navigation -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light shadow fixed-top">
		<div class="container">
			<a class="navbar-brand" href="/teamHome">iCompute</a>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">Welcome <%= locals.school%> <%=locals.grade%>th grade</li>
				</ul>
				<ul class="navbar-nav ml-auto">
					<li class="nav-item"><a class="nav-link" href="/teamLogin">logout</a></li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Body -->
	<div class="container pt-5">
		<div class="row justify-content-end">
			<div class="col-4 pt-4">
				<!--<%= JSON.stringify(result) %>-->
				<h1 class="font-weight-light text-right"></h1>
			</div>
		</div>
	</div>
	
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="jumbotron border border-white">
					<p><b><h3>Scratch Question </h3></b></p>
					<p><b><%= result[0].text %></b></p>
					
					<div class="row m-2">
					<% for(var i=0; i<resPics.length; i++) {%>
					  <div class="col-md-4">
					    <div class="thumbnail">
					      
					        <img src="<%=resPics[i].url %>" alt="Lights" class="img-thumbnail border border-dark" style="width:100%">
					        <div class="caption text-center">
					          <p><%=resPics[i].old_name %></p>
					        </div>
					      
					    </div>
					  </div>
					  <% } %>
					  
					</div>
					<div class="container">
					
					</div>
					
					<form action="/upload" enctype="multipart/form-data" id="uploadFileForm" method="post">
						<input class="btn-default m-2 ml-5" type="file" id="scratchFile" name="scratchFile" /> <br> <br>
						<div class="text-center">
   							<p><br><input class="btn btn-info" type="button" value="Submit Scratch File" onclick="checkFile()"></p>
   						</div>

   					  <div class="modal fade" id="fileUpload_modal" tabindex="-1" role="dialog" aria-hidden="true">
				        <div class="modal-dialog" role="document">
				          <div class="modal-content">
				            <div class="modal-header">
				              <h5 class="modal-title" id="exampleModalLabel">Upload File</h5>
				              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				                <span aria-hidden="true">&times;</span>
				              </button>
				            </div>
				            <div class="modal-body">
				              Make sure to attach a scratch file to upload
				            </div>
				            <div class="modal-footer">
				              <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>-->
				              <button type="button" class="btn btn-danger" data-dismiss="modal">OK</button>
				            </div>
				          </div>
				        </div>
				      </div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
	<script type="text/javascript">
		function checkFile()
		{
			if(document.getElementById("scratchFile").value==="" || document.getElementById("scratchFile").value==null
				|| !document.getElementById("scratchFile").value.includes(".sb"))
			{
				$('#fileUpload_modal').modal('show')
			}
			else
			{
				document.getElementById('uploadFileForm').submit();
			}
		}
	</script>
</body>
</html>